# =============================================================================
# Development Environment Configuration
# =============================================================================
# Copy this to .env for local development

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
APP_NAME=openctem
APP_ENV=development
APP_DEBUG=true

APP_ENCRYPTION_KEY="openssl rand -hex 32"

# -----------------------------------------------------------------------------
# Server
# -----------------------------------------------------------------------------
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
SERVER_READ_TIMEOUT=15s
SERVER_WRITE_TIMEOUT=15s
SERVER_REQUEST_TIMEOUT=30s
SERVER_SHUTDOWN_TIMEOUT=30s
SERVER_MAX_BODY_SIZE=1048576

# gRPC (optional)
#GRPC_PORT=9090

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
DB_HOST=localhost
DB_PORT=5432
DB_USER=openctem
DB_PASSWORD=secret
DB_NAME=openctem
DB_SSLMODE=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=5m

# -----------------------------------------------------------------------------
# Redis
# -----------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_POOL_SIZE=10
REDIS_MIN_IDLE_CONNS=2
REDIS_DIAL_TIMEOUT=5s
REDIS_READ_TIMEOUT=3s
REDIS_WRITE_TIMEOUT=3s
# TLS Settings (disabled in development)
REDIS_TLS_ENABLED=false
REDIS_TLS_SKIP_VERIFY=false
# Retry Settings
REDIS_MAX_RETRIES=3
REDIS_MIN_RETRY_DELAY=100ms
REDIS_MAX_RETRY_DELAY=3s

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=debug
LOG_FORMAT=json

# Log Sampling (for production - reduces log volume)
# See docs/development/logging.md for details
LOG_SAMPLING_ENABLED=false       # Enable in production
LOG_SAMPLING_THRESHOLD=100       # First N identical logs per second
LOG_SAMPLING_RATE=0.1            # Sample rate after threshold (10%)
LOG_ERROR_SAMPLING_RATE=1.0      # Always log errors (100%)
LOG_SKIP_HEALTH=true             # Skip health check endpoints
LOG_SLOW_REQUEST_SECONDS=5       # Warn on slow requests

# -----------------------------------------------------------------------------
# Keycloak Authentication (only needed if AUTH_PROVIDER is "oidc" or "hybrid")
# -----------------------------------------------------------------------------
# Local Keycloak for development (use port 8180 to avoid conflict with backend)
#KEYCLOAK_BASE_URL=http://localhost:8180
#KEYCLOAK_REALM=openctem
#KEYCLOAK_CLIENT_ID=api
#KEYCLOAK_JWKS_REFRESH_INTERVAL=1h
#KEYCLOAK_HTTP_TIMEOUT=10s

# -----------------------------------------------------------------------------
# CORS
# -----------------------------------------------------------------------------
# Allow all origins in development (NOT for production!)
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_ALLOWED_HEADERS=Accept,Authorization,Content-Type,X-Request-ID
CORS_MAX_AGE=86400

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
RATE_LIMIT_ENABLED=true
RATE_LIMIT_RPS=100
RATE_LIMIT_BURST=200
RATE_LIMIT_CLEANUP=1m

# -----------------------------------------------------------------------------
# Authentication
# -----------------------------------------------------------------------------
# Auth provider: "local" | "oidc" | "hybrid"
AUTH_PROVIDER=local

# JWT Configuration (required for local/hybrid auth)
# Generate with: openssl rand -base64 48
AUTH_JWT_SECRET=your-super-secret-key-at-least-64-characters-long-for-production
AUTH_JWT_ISSUER=api
AUTH_ACCESS_TOKEN_DURATION=15m
AUTH_REFRESH_TOKEN_DURATION=168h
AUTH_SESSION_DURATION=720h

# Password Policy
AUTH_PASSWORD_MIN_LENGTH=8
AUTH_PASSWORD_REQUIRE_UPPERCASE=true
AUTH_PASSWORD_REQUIRE_LOWERCASE=true
AUTH_PASSWORD_REQUIRE_NUMBER=true
AUTH_PASSWORD_REQUIRE_SPECIAL=false

# Security Settings
AUTH_MAX_LOGIN_ATTEMPTS=5
AUTH_LOCKOUT_DURATION=15m
AUTH_MAX_ACTIVE_SESSIONS=10
AUTH_ALLOW_REGISTRATION=true
AUTH_REQUIRE_EMAIL_VERIFICATION=false
#AUTH_EMAIL_VERIFICATION_DURATION=24h
#AUTH_PASSWORD_RESET_DURATION=1h

# -----------------------------------------------------------------------------
# SMTP Email Configuration
# -----------------------------------------------------------------------------
SMTP_ENABLED=false
#SMTP_HOST=smtp.example.com
#SMTP_PORT=587
#SMTP_USER=noreply@example.com
#SMTP_PASSWORD=your-smtp-password
#SMTP_FROM=noreply@example.com
#SMTP_FROM_NAME=OpenCTEM
#SMTP_TLS=true
#SMTP_SKIP_VERIFY=false
#SMTP_BASE_URL=http://localhost:3000
#SMTP_TIMEOUT=30s

# -----------------------------------------------------------------------------
# Connectors (Optional)
# -----------------------------------------------------------------------------
# Wiz Integration
#WIZ_CLIENT_ID=
#WIZ_CLIENT_SECRET=
#WIZ_AUTH_URL=
#WIZ_API_URL=

# Tenable Integration
#TENABLE_ACCESS_KEY=
#TENABLE_SECRET_KEY=

# -----------------------------------------------------------------------------
# OAuth / Social Login Configuration
# -----------------------------------------------------------------------------
# Enable OAuth globally
OAUTH_ENABLED=false

# Frontend callback URL for OAuth redirects
OAUTH_FRONTEND_CALLBACK_URL=http://localhost:3000/auth/callback

# State secret for CSRF protection (generate with: openssl rand -base64 48)
OAUTH_STATE_SECRET=

# State token expiration
OAUTH_STATE_DURATION=10m

# Google OAuth
OAUTH_GOOGLE_ENABLED=false
OAUTH_GOOGLE_CLIENT_ID=
OAUTH_GOOGLE_CLIENT_SECRET=
OAUTH_GOOGLE_SCOPES=openid,email,profile

# GitHub OAuth
OAUTH_GITHUB_ENABLED=false
OAUTH_GITHUB_CLIENT_ID=
OAUTH_GITHUB_CLIENT_SECRET=
OAUTH_GITHUB_SCOPES=read:user,user:email

# Microsoft OAuth (Entra ID / Azure AD)
OAUTH_MICROSOFT_ENABLED=false
OAUTH_MICROSOFT_CLIENT_ID=
OAUTH_MICROSOFT_CLIENT_SECRET=
OAUTH_MICROSOFT_SCOPES=openid,email,profile,User.Read
OAUTH_MICROSOFT_TENANT=common

# -----------------------------------------------------------------------------
# AI Triage Configuration
# -----------------------------------------------------------------------------
# AI-powered vulnerability triage is automatically enabled when:
# 1. At least one LLM API key is configured below (Anthropic, OpenAI, or Gemini)
# 2. The 'ai_triage' module is active in the database (modules.is_active = true)
# 3. Tenant's plan includes the 'ai_triage' module
#
# DEPRECATED: AI_TRIAGE_ENABLED is no longer used - feature availability is
# controlled by module is_active in database. This variable is ignored.
# AI_TRIAGE_ENABLED=false

# Platform LLM Provider: "claude" | "openai" | "gemini"
AI_PLATFORM_PROVIDER=claude

# Model to use for AI triage
# Claude: claude-sonnet-4-20250514, claude-opus-4-20250514
# OpenAI: gpt-4o, gpt-4-turbo
# Gemini: gemini-2.0-flash, gemini-1.5-pro
AI_PLATFORM_MODEL=claude-sonnet-4-20250514

# LLM API Keys (only need one based on AI_PLATFORM_PROVIDER)
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
GEMINI_API_KEY=

# Processing Limits
AI_MAX_CONCURRENT_JOBS=10
AI_RATE_LIMIT_RPM=60
AI_TIMEOUT_SECONDS=30
AI_MAX_TOKENS=2000

# LLM Parameters
# Temperature controls randomness (0.0 = deterministic, 1.0 = creative)
# Lower values produce more consistent results for security analysis
AI_TEMPERATURE=0.1

# Auto-Triage Settings (triggered automatically on new findings)
AI_AUTO_TRIAGE_DEFAULT_ENABLED=false
AI_AUTO_TRIAGE_DEFAULT_SEVERITIES=critical,high
AI_AUTO_TRIAGE_DELAY=60s
