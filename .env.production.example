# =============================================================================
# Production Environment Configuration
# =============================================================================
# Copy this to .env and update all <CHANGE_ME> values before deployment
# Validate with: APP_ENV=production go run cmd/server/main.go

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
APP_NAME=openctem
APP_ENV=production
APP_DEBUG=false

# -----------------------------------------------------------------------------
# Server
# -----------------------------------------------------------------------------
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
SERVER_READ_TIMEOUT=15s
SERVER_WRITE_TIMEOUT=15s
SERVER_REQUEST_TIMEOUT=30s
SERVER_SHUTDOWN_TIMEOUT=30s
SERVER_MAX_BODY_SIZE=1048576

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
# REQUIRED: SSL must be enabled in production
DB_HOST=<CHANGE_ME_DB_HOST>
DB_PORT=5432
DB_USER=<CHANGE_ME_DB_USER>
DB_PASSWORD=<CHANGE_ME_STRONG_PASSWORD>
DB_NAME=openctem
DB_SSLMODE=require
DB_MAX_OPEN_CONNS=50
DB_MAX_IDLE_CONNS=10
DB_CONN_MAX_LIFETIME=5m

# -----------------------------------------------------------------------------
# Redis
# -----------------------------------------------------------------------------
# REQUIRED: Password and TLS must be enabled in production
REDIS_HOST=<CHANGE_ME_REDIS_HOST>
REDIS_PORT=6379
REDIS_PASSWORD=<CHANGE_ME_MIN_32_CHARS>
REDIS_DB=0
REDIS_POOL_SIZE=50
REDIS_MIN_IDLE_CONNS=5
REDIS_DIAL_TIMEOUT=5s
REDIS_READ_TIMEOUT=3s
REDIS_WRITE_TIMEOUT=3s
# TLS Settings (REQUIRED in production)
REDIS_TLS_ENABLED=true
REDIS_TLS_SKIP_VERIFY=false
# Retry Settings
REDIS_MAX_RETRIES=3
REDIS_MIN_RETRY_DELAY=100ms
REDIS_MAX_RETRY_DELAY=3s

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
# Use "info" or "warn" in production (never "debug")
LOG_LEVEL=info
LOG_FORMAT=json

# -----------------------------------------------------------------------------
# Authentication
# -----------------------------------------------------------------------------
# Auth provider: "local" | "oidc" | "hybrid"
AUTH_PROVIDER=local

# REQUIRED for local auth: JWT secret (min 64 characters)
# Generate with: openssl rand -base64 48
AUTH_JWT_SECRET=<CHANGE_ME_GENERATE_WITH_OPENSSL>
AUTH_JWT_ISSUER=api

# Token durations
AUTH_ACCESS_TOKEN_DURATION=15m
AUTH_REFRESH_TOKEN_DURATION=168h
AUTH_SESSION_DURATION=720h

# Password policy
AUTH_PASSWORD_MIN_LENGTH=8
AUTH_PASSWORD_REQUIRE_UPPERCASE=true
AUTH_PASSWORD_REQUIRE_LOWERCASE=true
AUTH_PASSWORD_REQUIRE_NUMBER=true
AUTH_PASSWORD_REQUIRE_SPECIAL=false

# Security settings
AUTH_MAX_LOGIN_ATTEMPTS=5
AUTH_LOCKOUT_DURATION=15m
AUTH_MAX_ACTIVE_SESSIONS=10

# Registration
AUTH_ALLOW_REGISTRATION=false
AUTH_REQUIRE_EMAIL_VERIFICATION=true

# -----------------------------------------------------------------------------
# Keycloak (Optional - only for oidc or hybrid auth)
# -----------------------------------------------------------------------------
# KEYCLOAK_BASE_URL=https://<CHANGE_ME_KEYCLOAK_HOST>
# KEYCLOAK_REALM=<CHANGE_ME_REALM>
# KEYCLOAK_CLIENT_ID=<CHANGE_ME_CLIENT_ID>
# KEYCLOAK_JWKS_REFRESH_INTERVAL=1h
# KEYCLOAK_HTTP_TIMEOUT=10s

# -----------------------------------------------------------------------------
# CORS
# -----------------------------------------------------------------------------
# REQUIRED: Specify exact allowed origins (NO wildcards in production)
CORS_ALLOWED_ORIGINS=https://<CHANGE_ME_FRONTEND_DOMAIN>
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_ALLOWED_HEADERS=Accept,Authorization,Content-Type,X-Request-ID
CORS_MAX_AGE=86400

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
RATE_LIMIT_ENABLED=true
RATE_LIMIT_RPS=100
RATE_LIMIT_BURST=200
RATE_LIMIT_CLEANUP=1m

# -----------------------------------------------------------------------------
# SMTP Email (Optional - for email verification, password reset)
# -----------------------------------------------------------------------------
SMTP_ENABLED=false
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=<CHANGE_ME>
# SMTP_PASSWORD=<CHANGE_ME>
# SMTP_FROM=noreply@openctem.io
# SMTP_FROM_NAME=OpenCTEM
# SMTP_TLS=true
# SMTP_BASE_URL=https://<CHANGE_ME_FRONTEND_DOMAIN>

# -----------------------------------------------------------------------------
# Connectors (Optional)
# -----------------------------------------------------------------------------
# Wiz Integration
#WIZ_CLIENT_ID=
#WIZ_CLIENT_SECRET=
#WIZ_AUTH_URL=
#WIZ_API_URL=

# Tenable Integration
#TENABLE_ACCESS_KEY=
#TENABLE_SECRET_KEY=

# -----------------------------------------------------------------------------
# AI Triage Configuration
# -----------------------------------------------------------------------------
# AI triage is automatically enabled when LLM API key is configured.
# Feature availability controlled by module is_active in database.
# DEPRECATED: AI_TRIAGE_ENABLED is no longer used.

# Platform LLM Provider: "claude" | "openai" | "gemini"
AI_PLATFORM_PROVIDER=claude
AI_PLATFORM_MODEL=claude-sonnet-4-20250514

# LLM API Keys - Configure at least one to enable AI triage
# Only configure the key matching your AI_PLATFORM_PROVIDER
ANTHROPIC_API_KEY=<CHANGE_ME_IF_USING_CLAUDE>
#OPENAI_API_KEY=<CHANGE_ME_IF_USING_OPENAI>
#GEMINI_API_KEY=<CHANGE_ME_IF_USING_GEMINI>

# Processing Limits
AI_MAX_CONCURRENT_JOBS=10
AI_RATE_LIMIT_RPM=60
AI_TIMEOUT_SECONDS=30
AI_MAX_TOKENS=2000

# Auto-Triage Settings
AI_AUTO_TRIAGE_DEFAULT_ENABLED=false
AI_AUTO_TRIAGE_DEFAULT_SEVERITIES=critical,high
AI_AUTO_TRIAGE_DELAY=60s
